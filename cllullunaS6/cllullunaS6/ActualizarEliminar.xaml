<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cllullunaS6.ActualizarEliminar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Actualizar datos | Eliminar"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Label Text="Actualizar Estudiante" FontSize="20"/>
            <Entry x:Name="txtcodigo"  IsEnabled="False"/>
            <Entry x:Name="txtnombre" Placeholder="Ingrese el nombre"/>
            <Entry x:Name="txtapellido" Placeholder="Ingrese el apellido"/>
            <Entry x:Name="txtedad" Placeholder="Ingrese el edad" Keyboard="Numeric"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
            </Grid>
            <Button x:Name="btnactualizar" Text="Actualizar" Clicked="btnactualizar_Clicked"  Grid.Row="0" Grid.Column="0"/>
            <Button x:Name="btneliminar" Text="Eliminar" Clicked="btneliminar_Clicked" Grid.Row="0" Grid.Column="1"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>